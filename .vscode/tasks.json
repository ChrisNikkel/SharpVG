{
    "version": "0.1.0",
    "osx": {
        "command": "${workspaceRoot}/build.sh"
    },
    "windows": {
        "command": "${workspaceRoot}/build.cmd"
    },
    "linux": {
        "command": "${workspaceRoot}/build.sh"
    },
    "showOutput": "silent",
    "tasks": [
        {
            "isBuildCommand": true,
            "taskName": "Build",
            "problemMatcher": "$msCompile"
        },
        {
            "isTestCommand": true,
            "taskName": "Test",
            "problemMatcher": "$msCompile"
        }
    ]
}